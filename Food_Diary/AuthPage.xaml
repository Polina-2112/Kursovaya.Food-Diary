<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food_Diary.AuthPage">

    <StackLayout BackgroundColor="#588982" Padding="15,200,15,0">

        <Line HeightRequest="4" BackgroundColor="#FF9376"/>

        <Frame BackgroundColor="#97BEBC" Margin="5, 15, 5, 0" VerticalOptions="Center">
            <StackLayout>
                <Entry Placeholder="Логин" x:Name="LoginField" BackgroundColor="#97BEBC" PlaceholderColor="#588982"/>
                <Entry Placeholder="Пароль" x:Name="PassField" BackgroundColor="#97BEBC" PlaceholderColor="#588982" IsPassword="True"/>
            </StackLayout>
        </Frame>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Вход" x:Name="InButton" TextTransform="None"
                        TextColor="#FF9376" BackgroundColor="#588982" Clicked="InButton_Clicked"
                        FontSize="20" FontAttributes="Bold" Margin="-15,0,0,0"/>
            <Button Text="Регистрация" x:Name="RegButton" TextTransform="None"
                        TextColor="#FF9376" BackgroundColor="#588982" Clicked="RegButton_Clicked"
                        FontSize="20" FontAttributes="Bold"/>
        </StackLayout>

        <Line HeightRequest="4" BackgroundColor="#FF9376"/>
    </StackLayout>
    
</ContentPage>